<div class="row student-dropdown">
    <div class="col-md-6">
        <form>
            <div class="form-group">
                <div class="form-group__text select">
                    <select id="student_select">
                        <option value="0" selected>Select a Student</option>
                        {{#each users}}
                            <option value="{{this}}">Student {{this}}</option>
                        {{/each}}
                    </select>
                </div>
            </div>
        </form>
    </div>
</div>

<script>
    window.addEventListener('load', function() {
        $('#student_select').on('change', function(ev) {
            var currentStudentId = $(ev.target).val();

            $.get('/login/' + currentStudentId, function(data) {
                window.location.replace('/courses/88343999344')
            });
        });
    }, false);
</script>